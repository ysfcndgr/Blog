@model AMS.Model.Relotional.Writer
@{
    ViewData["Title"] = "Kaydol";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<body>
    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <h3 class="tittle">Kaydol</h3>
            <div class="inner-sec">
                <div class="login p-5 bg-light mx-auto mw-100">
                    <form asp-action="Index" method="post">
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label for="validationCustom01">Adınız ve soyadınız</label>
                                @Html.TextBoxFor(x=>x.WriterName,new {@class = "form-control"})
                                @Html.ValidationMessageFor(x=>x.WriterName)
                                @*<input type="text" class="form-control" id="validationDefault01" asp-for="WriterName" placeholder="" required="">*@
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="validationCustom02">Mail Adresiniz</label>
                                   @Html.TextBoxFor(x=>x.WriterMail,new {@class = "form-control", @type="email"})
                                @Html.ValidationMessageFor(x=>x.WriterMail)
                                @*<input type="email" class="form-control" id="validationDefault02" asp-for="WriterMail" placeholder="" required="">*@
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="exampleInputPassword1 mb-2">Parola</label>
                                @Html.TextBoxFor(x=>x.WriterPassword, new {@class = "form-control", @type="password"})
                                @Html.ValidationMessageFor(x=>x.WriterPassword)
                                @*<input type="password" class="form-control" asp-for="WriterPassword" id="password1" placeholder="" required="">*@
                            </div>
                            <div class="form-group col-md-6">
                                <label for="exampleInputPassword2 mb-2">Parolayı tekrar giriniz</label>
                                <input type="password" class="form-control" id="password2" placeholder="" required="">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary submit mb-4">Kaydol</button>
                        <p>
                            <a id="agree" href="#">Sözleşmeyi okudum onaylıyorum</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!--//main-->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <!---->
    <!-- js -->	<!-- //js -->
    <!-- password-script -->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        $('#agree').click(function (){
        swal("Sitemizde verdiğiniz mail adresi üzerinden bilgi ve haber e-postaları spam ölçüsüne varmadan gönderilmeye devam edilecektir.");
        });
        window.onload = function () {
            document.getElementById("password1").onchange = validatePassword;
            document.getElementById("password2").onchange = validatePassword;
        }

        function validatePassword() {
            var pass2 = document.getElementById("password2").value;
            var pass1 = document.getElementById("password1").value;
            if (pass1 != pass2)
                document.getElementById("password2").setCustomValidity("Parololar eşleşmiyor!");
            else
                document.getElementById("password2").setCustomValidity('');
            //empty string means no validation error
        }
    </script>
    <!-- //password-script -->
</body>
